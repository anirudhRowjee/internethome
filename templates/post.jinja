{% extends "base.jinja" %}

{% block title %}
- {{frontmatter.title}}
{% endblock %}

{% block main_template_content %}
<div>
    <h1> {{frontmatter.title}} </h1>
    <p><i>{{frontmatter.description}} ~ Anirudh</i></p>
</div>
<div class="post">
    {{postcontent | safe}}
</div>
<br> 
{% if frontmatter.date %} Published on: {{frontmatter.date}} <br/> {% endif %}
{% if frontmatter.tags %}
Tags: {% for tag in frontmatter.tags %}
<a class="tag" href="/tags/{{tag}}">{{tag}}</a>
{% endfor %}
{% endif %}
{% if frontmatter.collections %}
Collections: {% for tag in frontmatter.collections %}
<a class="tag" href="/tags#{{tag}}">{{tag}}</a>
{% endfor %}
{% endif %}
{% endblock %}
